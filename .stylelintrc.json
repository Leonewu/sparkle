{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "scss/at-import-partial-extension-blacklist": "nothing",
    "selector-class-pattern": null,
    "no-empty-source": null
  },
  "ignoreFiles": [
    "./mobile/**/*.scss",
    "./mobile/**/*.vue",
    "./site/**/*.scss",
    "./site/**/*.vue",
    "./lib/**/*.css"
  ]
}